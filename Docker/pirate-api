FROM nikolaik/python-nodejs:python3.12-nodejs22-slim

RUN apt update && \
    apt -y install build-essential \
                    libffi-dev \
                    unzip \
                    rsync \
					git
                    
RUN pip install -r requirements-api.txt

WORKDIR /app

COPY package-api.json package.json

RUN apt install -y git

RUN npm install

ENTRYPOINT ["python3"]