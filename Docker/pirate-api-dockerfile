FROM python:3.13

RUN apt update && \
    apt -y install build-essential \
                    libffi-dev \
                    unzip \
                    rsync \
					git
         
COPY requirements-api.txt requirements-api.txt
                    
RUN pip install -r requirements-api.txt

WORKDIR /app

RUN apt install -y git

RUN npm install

ENTRYPOINT ["python3"]